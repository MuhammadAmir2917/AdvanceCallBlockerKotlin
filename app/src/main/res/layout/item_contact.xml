<?xml version="1.0" encoding="utf-8"?>

<com.example.advance.callblocker.widgets.SwipeRevealLayout android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:dragFromEdge="right"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:padding="@dimen/_5sdp"
                android:background="@drawable/blue_circle_button"
                android:id="@+id/iv_message"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_message"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:padding="@dimen/_5sdp"
                android:background="@drawable/green_circle_button"
                android:id="@+id/iv_call"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_phone"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:padding="@dimen/_5sdp"
                android:background="@drawable/dark_circle_button"
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_pencil"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:padding="@dimen/_5sdp"
                android:background="@drawable/red_circle_button"
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_trash"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:background="@color/light_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:src="@drawable/user_photo"
                android:id="@+id/iv_user_photo"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                android:scaleType="fitXY"
                app:riv_corner_radius="@dimen/_10sdp"
                />

            <LinearLayout
                android:id="@+id/fgView"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Amir"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+92 347 1234567"
                    android:textColor="@color/grey_text"
                    />
            </LinearLayout>
            <CheckBox
                android:id="@+id/chk_favorite"
                android:layout_marginRight="@dimen/_10sdp"
                android:button="@drawable/favorite_checkbox_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#EB3D3D3D"/>
    </LinearLayout>
</com.example.advance.callblocker.widgets.SwipeRevealLayout>
